import { NextApiRequest, NextApiResponse } from 'next'
import { ProjectService } from '@/services/project'
import { getSession } from 'next-auth/react'

export default async function handler(
  req: NextApiRequest,
  res: NextApiResponse
) {
  const session = await getSession({ req })

  if (!session) {
    return res.status(401).json({ message: 'Unauthorized' })
  }

  const { projectId } = req.query
  const projectService = new ProjectService()

  if (req.method === 'GET') {
    const project = await projectService.get(projectId as string)
    return res.status(200).json(project)
  }

  if (req.method === 'POST') {
    const body = req.body
    
    // FIXED: Property names now match the schema.prisma 'User' and 'Project' models
    const updatedProject = await projectService.update(projectId as string, {
      title: body.title,
      enable_notification: body.enableNotification,
      enable_webhook: body.enableWebhook, // Matches @map("enable_webhook") in schema
      webhook: body.webhookUrl,
    })

    return res.status(200).json(updatedProject)
  }

  if (req.method === 'DELETE') {
    await projectService.delete(projectId as string)
    return res.status(204).end()
  }

  return res.status(405).json({ message: 'Method not allowed' })
}
