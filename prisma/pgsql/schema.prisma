generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["auth", "public"]
}

model Account {
  id                 Int       @id @default(autoincrement())
  compoundId         String    @unique @map("compound_id")
  userId             String    @map("user_id")
  providerType       String    @map("provider_type")
  providerId         String    @map("provider_id")
  providerAccountId  String    @map("provider_account_id")
  refreshToken       String?   @map("refresh_token")
  accessToken        String?   @map("access_token")
  accessTokenExpires DateTime? @map("access_token_expires")
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime  @default(now()) @map("updated_at")

  @@index([providerAccountId], map: "providerAccountId")
  @@index([providerId], map: "providerId")
  @@index([userId], map: "userId")
  @@map("accounts")
  @@schema("public")
}

model Session {
  id           Int      @id @default(autoincrement())
  userId       String   @map("user_id")
  expires      DateTime
  sessionToken String   @unique @map("session_token")
  accessToken  String   @unique @map("access_token")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @default(now()) @map("updated_at")

  @@map("sessions")
  @@schema("public")
}

model Project {
  id                       String    @id(map: "projects_pkey")
  title                    String
  created_at               DateTime  @default(now())
  updated_at               DateTime  @default(now())
  
  // FIXED: Rename the field to userId but keep it mapped to owner_id in the DB
  userId                   String    @map("owner_id")
  
  token                    String?
  fetch_latest_comments_at DateTime? @map("fetch_latest_comments_at")
  enable_notification      Boolean?  @default(true) @map("enable_notification")
  webhook                  String?
  enable_webhook           Boolean?  @map("enable_webhook")
  deleted_at               DateTime? @map("deleted_at")
  
  Page                     Page[]
  // Update the relation to use the new field name
  user                     User      @relation(fields: [userId], references: [id])

  @@map("projects")
  @@schema("public")
}

model Project {
  id                       String    @id(map: "projects_pkey")
  title                    String
  created_at               DateTime  @default(now())
  updated_at               DateTime  @default(now())
  
  // This line is the fix: It tells Prisma to treat owner_id as userId
  owner_id                 String    @map("owner_id")
  userId                   String?   @map("owner_id") 
  
  token                    String?
  fetch_latest_comments_at DateTime? @map("fetch_latest_comments_at")
  enable_notification      Boolean?  @default(true) @map("enable_notification")
  webhook                  String?
  enable_webhook           Boolean?  @map("enable_webhook")
  deleted_at               DateTime? @map("deleted_at")
  
  Page                     Page[]
  user                     User      @relation(fields: [owner_id], references: [id])

  @@map("projects")
  @@schema("public")
}

model Comment {
  id            String    @id(map: "comments_pkey")
  pageId        String    @map("page_id")
  created_at    DateTime  @default(now())
  updated_at    DateTime  @default(now())
  deleted_at    DateTime? @map("deleted_at")
  moderatorId   String?   @map("moderator_id")
  by_email      String?
  by_nickname   String
  content       String
  approved      Boolean   @default(false)
  parentId      String?   @map("parent_id")
  votes_count   BigInt    @default(0)
  projectId     String?   @map("project_id")
  ip            String?
  
  // FIXED: Renamed relation to 'user'
  user          User?     @relation(fields: [moderatorId], references: [id])
  Page          Page      @relation(fields: [pageId], references: [id])

  @@map("comments")
  @@schema("public")
}

model Page {
  id         String    @id(map: "pages_pkey")
  slug       String
  url        String?
  title      String?
  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  projectId  String    @map("project_id")
  Comment    Comment[]
  Project    Project   @relation(fields: [projectId], references: [id])

  @@index([projectId], map: "projectId")
  @@map("pages")
  @@schema("public")
}

model Subscription {
  id                     String    @id @default(uuid())
  userId                 String    @unique @map("user_id")
  lemonSubscriptionId    String?   @map("lemon_subscription_id")
  orderId                String?   @map("order_id")
  productId              String?   @map("product_id")
  variantId              String?   @map("variant_id")
  customerId             String?   @map("customer_id")
  status                 String?
  endsAt                 DateTime? @map("ends_at")
  updatePaymentMethodUrl String?   @map("update_payment_method_url")
  createdAt              DateTime  @default(now()) @map("created_at")
  user                   User      @relation(fields: [userId], references: [id])

  @@map("subscriptions")
  @@schema("public")
}

model Usage {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  label     String
  count     Int      @default(0)
  updatedAt DateTime @updatedAt @map("updated_at")
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, label])
  @@map("usages")
  @@schema("public")
}

model VerificationRequest {
  id         Int      @id @default(autoincrement())
  identifier String
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @default(now()) @map("updated_at")

  @@map("verification_requests")
  @@schema("public")
}
